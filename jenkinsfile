pipeline {
    agent any
    environment{
        REPO_URL = "https://github.com/prtkdave/devops.git"
               }
    stages {
        stage('Hello') {
            steps {
                sh 'echo "Hello World"'
                sh '''
                    echo "Multiline shell steps"
                    ls
                    echo $REPO_URL
                   '''
                
            }
        }

       stage('Checkout external proj') {
           steps {
                git branch: '*/develop',
                credentialsId: '5b09e5e8-aca5-4bc3-ae64-da77adb44743',
                url: '$REPO_URL'

            sh "ls -lat"
        }
    }
    }
}

