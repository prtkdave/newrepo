pipeline {
    agent any
    environment{
        REPO_URL = "https://githib.com/prtkdave/devops.git"
               }
    stages {
        stage('Hello') {
            steps {
                sh 'echo "Hello World"'
                sh '''
                    echo "Multiline shell steps"
                    ls
                    echo $REPO_URL
                   '''
                
            }
        }

       stage('Checkout external proj') {
           steps {
                git branch: 'master',
                credentialsId: 'prtkdave',
                url: '$REPO_URL'

            sh "ls -lat"
        }
    }
    }
}

